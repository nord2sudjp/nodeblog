<div class="container">
    {{>error}}

    <form method="post" action="/posts/add" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title:</label>
            <input class="form-control" name="title" type="text" value="{{post.title}}" />
        </div>
        <div class="form-group">
            <label>Category</label>
            <select class="form-control" name="category">
                {{#select post.category}}
                {{#each categories}}
                <option value="{{name}}"">{{name}}</option>
                {{/each}}
                {{/select}}
            </select>
        </div>
        <div class=" form-group">
                    <label>Body</label>
                    <textarea class="form-control" name="body" id="body">{{post.body}}</textarea>
        </div>
        <!--
        <div class="form-group">
            <label>Event Date</label>
            <input type="date" class="form-control" name="eventdate" id="eventdate"></input>
        </div>
        -->
        <div class="form-group">
            <label>Image</label>
            <input class="form-control-file" name="mainimage" id="mainimage" type="file"></input>
        </div>

        <div class="form-group">
            <label>Author:</label>
            <select class="form-control" name="author">
                {{#select post.author}}
                <option value="Brad Traversy">Brad Traversy</option>
                <option value="John Doe">John Doe</option>
                {{/select}}
            </select>
        </div>
        <button type="submit">Submit</button>
    </form>
</div>

<script src="/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('body')
</script>